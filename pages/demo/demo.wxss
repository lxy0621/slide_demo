page {
  background: #ccc;
}

.demo {
  padding: 10rpx;
}

.packet {
  width: 100%;
  height: 120rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.packet .name {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.packet .get {
  flex: 1;
  background: orange;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
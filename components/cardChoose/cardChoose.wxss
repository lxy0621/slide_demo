/* modal样式 */

.modal-box {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-card {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 800rpx;
  background: #fff;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  overflow: hidden;
  z-index: 300;
}

.title {
  width: 100%;
  height: 88rpx;
  background: red;
}

.title .cloose {
  margin-left: calc(100% - 88rpx);
  width: 88rpx;
  height: 88rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card_body {
  padding: 10rpx;
  box-sizing: border-box;
  z-index: 298;
}

.type {
  margin-top: 10rpx;
  height: 300rpx;
  background: #ccc;
}

.getNow {
  height: 100rpx;
  width: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.getNow view {
  width: 450rpx;
  height: 88rpx;
  background: red;
  border-radius: 12rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-cover {
  width: 100%;
  background-color: #242424;
  opacity: 0.5;
  z-index: 299;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  overflow: hidden;
}